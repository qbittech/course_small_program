.container {
  padding: 0 3%;
  height: 100vh;
  background-color: #fff;
}
.step-img{
  margin: 20rpx 0;
  width: 100%;
}
.step-img image{
  width: 100%;
}
.step-wrap{
  position: relative;
  margin-bottom: 10rpx;
  padding: 24rpx 0;
  background-color: #fff;
}
.step-wrap .icon-list{
  position: absolute;
  top: 22rpx;
  height: 46rpx;
  line-height: 46rpx;
}
.step-group .icon-list{
  left: 21%;
  width: 79%;
}
.step-alone .icon-list{
  left: 30%;
  width: 70%;
}
.step-wrap .icon-list .iconfont{
  display: inline-block;
  font-size: 22rpx;
  color: #e4bc98;
}
.step-group .icon-list .iconfont{
  margin-right: 28%;
}
.step-alone .icon-list .iconfont{
  margin-right: 44%;
}
.text-list{
  display: flex;
  justify-content: space-around;
  padding: 0 2%;
}
.text-item{
  text-align: center;
}
.text-item .iconfont{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 46rpx;
  color: #fe6100;
}
.text-item .text{
  display: block;
  line-height: 26rpx;
  text-align: center;
  font-size: 20rpx;
  color: #666;
}
.explain{
  margin-bottom: 24rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}
.explain .title,
.explain-step .title{
  margin-bottom: 6rpx;
  font-weight: bold;
  font-size: 28rpx;
  color: #000;
}
.explain-step .title{
  margin-bottom: 16rpx;
}
.explain .content{
  color: #666;
}
.step-item{
  margin: 10rpx 0 40rpx 0;
  padding: 0 10rpx;
}
.step-title{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 50rpx;
  color: #f9daab;
}
.step-title text{
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #f39f3c;
}
.step-bg{
  padding: 40rpx 30rpx;
  background-color: #fdfcea;
}
.step-notice{
  line-height: 40rpx;
  font-size: 28rpx;
  color: #33;
}
.step-bg image{
  margin-top: 20rpx;
  width: 100%;
}
