/**app.wxss**/
@import "static/style/iconfont.wxss";

.da{
  color: red;
}

/* 重置默认样式 */
button:after{
  border: none;
}

/* 分割线 */
.divider{
  width: 100%;
  height: 10rpx;
  background-color: #f9f9f9;
}

/* 弹出框 */
.popup-outer{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .4);
  z-index: 100;
}
.popup-inner-bottom{
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 30rpx 5%;
  width: 90%;
  background-color: #fff;
}
.popup-inner-middle{
  margin: 0 auto;
  width: 90%;
  background-color: #fff;
  border-radius: 8rpx;
}
.popup-title{
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  font-weight: bold;
  font-size: 40rpx;
  text-align: center;
}
.popup-close{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 40rpx;
}
.popup-button{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: -webkit-linear-gradient(left, #ff650d, #ffa74d);
  background: -o-linear-gradient(left, #ff650d, #ffa74d);
  background: -moz-linear-gradient(left, #ff650d, #ffa74d);
  background: linear-gradient(left, #ff650d, #ffa74d);
  border-radius: 10rpx;
}
